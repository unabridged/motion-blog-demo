<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h3 style="margin-top: 2rem;">New Comment</h3>
<%= render CommentFormComponent.new(post: @post) %>
<h3 style="margin-top: 2rem;">Comments</h3>
<%= render CommentListComponent.new(post: @post) %>